.field
  %input.form-control{value: name}
  .actions
    = submit_tag "submit", class: "btn btn-primary", id: "changetitle"

:javascript
  $(function(){
    $("#changetitle").on("click", function(){
     $.ajax({
        type: "POST",
        url: ("/books/#{book_id}/pages/#{page_order}/changename"),
        data: {
          "name": $("#title .content input")[0].value
        },
        success: function(data){
          console.log("success!")
        }
      })
    })
  })

