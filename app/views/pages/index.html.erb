<p id="notice"><%= notice %></p>

<h1>Listing Pages</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Url</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.book %></td>
        <td><%= page.url %></td>
        <td><%= page.content %></td>
        <td><%= link_to 'Show', book_page_path(@book, page) %></td>
        <td><%= link_to 'Edit', edit_book_page_path(@book, page) %></td>
        <td><%= link_to 'Destroy', book_page_path(@book, page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_book_page_path(@book) %>
