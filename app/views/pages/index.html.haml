%p#notice= notice
%h1 Listing Pages
%table
  %thead
    %tr
      %th Book
      %th Url
      %th title
      %th{:colspan => "3"}
  %tbody
    - @pages.each do |page|
      %tr
        %td= page.order
        %td= page.url
        %td= page.title
        %td
          %img{:src => "data:text/plain;base64, #{page.thumbnail}"}/
        %td= link_to 'Show', book_page_path(@book, page.order)
        %td= link_to 'Edit', edit_book_page_path(@book, page.order)
        %td= link_to 'Destroy', book_page_path(@book, page.order), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Page', new_book_page_path(@book)
